<% if current_user.user_kind == UserKind.ADMIN %>
  <%= render 'layouts/admin_navbar' %>
<% else %>
  <%= render 'layouts/user_navbar' %>
<% end %>

<div class="card col-6 offset-3 mt-5 p-0">
  <div class="card-header">
    <h3 class="text-center">
      <%= @suggestion.title %>
    </h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label>Tipo</label>
      <input value="<%= @suggestion.show_kind %>" class="form-control" disabled>
    </div>

    <div class="form-group">
      <label>Descrição</label>
      <textarea value="" class="form-control" rows="10" disabled>
        <%= @suggestion.description %>
      </textarea>
    </div>

    <div class="form-group">
      <label>Solicitante</label>
      <input value="<%= @suggestion.requester.login %>" class="form-control" disabled>
    </div>

  </div>
</div>
