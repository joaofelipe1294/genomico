  </div>
  <div class="form-group">
    <%= f.label :cid_code %>
    <%= f.text_field :cid_code, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :lis_code %>
    <%= f.text_field :lis_code, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :health_ensurance_id %>
    <%= f.select :health_ensurance_id, options_from_collection_for_select(@health_ensurances, 'id', 'name'), {}, {class: 'form-control'} %>
    <% f.text_field :health_ensurance_id %>
  </div>
  
