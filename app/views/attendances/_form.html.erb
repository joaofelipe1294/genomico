  </div>
  <div class="form-group">
    <%= f.label :doctor_crm %>
    <%= f.number_field :doctor_crm, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :observations %>
    <%= f.text_area :observations, {class: 'form-control'} %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
