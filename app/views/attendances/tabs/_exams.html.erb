<div style="overflow: auto;">

  <div class="form-group">
    <%= f.label :patient %>
    <%= text_field_tag :patient, @attendance.patient.name, class: 'form-control', disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag Field.model_name.human %>
    <%= select_tag :field_select, options_from_collection_for_select(Field.all.order(:name), "id", "name"), {class: 'form-control', id: 'fields_select'} %>
  </div>

  <div class="form-group">
    <%= label_tag Exam.model_name.human %>
    <%= select_tag :exam_select, options_from_collection_for_select(OfferedExam.by_field(Field.all.order(:name).first), "id", "name"), {class: 'form-control', id: 'exams_select'} %>
  </div>

  <%= f.text_field :exams, id: 'exam_ids', hidden: true %>

  <button id="btn_add_exam" class="btn btn-outline-info float-right">
    Adicionar
  </button>

</div>

