<div class="card col-md-10 p-0 offset-md-1">
  <div class="card-header">
    <%= form_for(@attendance, {url: add_report_path, method: :patch, multipart: true, class: 'form-inline'}) do |f| %>
      <div class = 'form-group'>
        <label class = 'h3'>Selecione um arquivo: </label>
        <%= f.file_field :report, {class: '', required: true} %>
        <button class = 'btn btn-outline-primary'>
          Salvar
        </button>
      </div>
      
    <% end %>
  </div>
  <div class="card-body">
    <% if @attendance.report? %>
      <embed src = "<%= @attendance.report.url %>" height="1150" class = 'offset-md-1 col-md-10' />
    <% end %>
  </div>
</div>




