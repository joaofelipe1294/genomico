<%= render 'layouts/user_navbar' %>

<div class="col-md-10 offset-md-1 mt-4 border p-2">
  <div class="border-bottom pb-3">
    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <a class="nav-link active" id = 'attendance_nav'>Atendimento</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id = 'exam_nav'>Exames</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id = 'sample_nav'>Amostras</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id = 'sub_sample_nav'>Subamostras</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id = 'work_map_nav'>Mapa de trabalho</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id = 'report_nav'>Laudo</a>
      </li>
    </ul>
  </div>
  <div class="mt-2 col-md-10 offset-md-1 mt-3">

		<%= form_for(@attendance, {method: :patch, action: :attendance_path, html: {style: 'overflow: auto;'}}) do |f| %>
			
			<div class = 'form-group'>
				<%= f.label :patient %>
				<%= f.text_field :patient, {class: 'form-control', disabled: true, value: @attendance.patient.name} %>
			</div>

			<div class = 'form-group'>
				<%= f.label :start_date %>
				<%= f.text_field :start_date, {class: 'form-control', disabled: true, value: @attendance.start_date.strftime('%d/%m/%y')} %>
			</div>

			<div class="form-group">
				<%= f.label :attendance_status_kind %>
				<%= f.text_field :attendance_status_kind, {class: 'form-control', disabled: true, value: @attendance.attendance_status_kind.name} %>
			</div>

			<div class="form-group">
				<%= f.label :desease_stage %>
				<%= f.select :desease_stage_id, options_from_collection_for_select(@desease_stages, 'id', 'name', selected: @attendance.desease_stage.id), {}, {class: 'form-control'} %>
			</div>

			<div class="form-group">
				<%= f.label :cid_code %>
				<%= f.text_field :cid_code, {class: 'form-control'} %>
			</div>

			<div class = 'form-group'>
				<%= f.label :lis_code %>
				<%= f.text_field :lis_code, {class: 'form-control'} %>
			</div>

			<div class = 'form-group'>
				<%= f.label :health_ensurance %>
				<%= f.select :health_ensurance_id, options_from_collection_for_select(@health_ensurances, 'id', 'name', selected: @attendance.health_ensurance.id), {}, {class: 'form-control'} %>
			</div>

			<div class = 'form-group'>
				<%= f.label :doctor_name %>
				<%= f.text_field :doctor_name, {class: 'form-control'} %>
			</div>

			<div class="form-group">
				<%= f.label :doctor_crm %>
				<%= f.text_field :doctor_crm, {class: 'form-control'} %>
			</div>

			<div class="form-group">
				<%= f.label :observations %>
				<%= f.text_area :observations, {class: 'form-control'} %>
			</div>

			<button class = 'btn btn-outline-primary float-right'>
				Salvar
			</button>

		<% end %>














































  </div>
</div>


<script>

  $('#attendance_nav').click(event => {
    event.preventDefault()
    $('#attendance_tab').removeAttr('hidden')
    $('#exams_tab').attr('hidden', 'hidden')
    $('#samples_tab').attr('hidden', 'hidden')
    $('#sub_sample_tab').attr('hidden', 'hidden')
    $('#work_map_tab').attr('hidden', 'hidden')
    $('#report_tab').attr('hidden', 'hidden')
    $('#attendance_nav').addClass('active')
    $('#exam_nav').removeClass('active')
    $('#sample_nav').removeClass('active')
    $('#sub_sample_nav').removeClass('active')
    $('#work_map_nav').removeClass('active')
    $('#report_nav').removeClass('active')
  })

</script>