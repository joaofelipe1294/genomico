        <%= form.label :field %>
        <%= form.select :field_id, options_from_collection_for_select(@fields, "id", "name"), {}, {class: 'form-control'} %>
      </div>
      <button class="btn btn-outline-primary float-right">
        Salvar
      </button>
    <% end %>
  </div>

