<%= render 'layouts/user_navbar' %>

<table class="table text-center mt-5">
  <thead class="bg-dark text-white">
    <tr>
      <th>Reagente</th>
      <th>Lote</th>
      <th>Validade</th>
      <th>Quantidade</th>
      <th>Data de entrada</th>
      <th>Estado atual</th>
      <th>Localização</th>
      <th>Responsável</th>
      <th>Área</th>
      <th>Identificação</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_entries.each do |stock_entry| %>
      <tr class="stock-entry">
        <td><%= stock_entry.product.stock_product.name %></td>
        <td><%= stock_entry.product.lot %></td>
        <td class="shelf-life">
          <% if stock_entry.product.has_shelf_life %>
            <%= l stock_entry.product.shelf_life %>
          <% else %>
            -
          <% end %>
        </td>
        <td><%= stock_entry.product.amount %></td>
        <td><%= l stock_entry.entry_date %></td>
        <td><%= stock_entry.product.current_state.name %></td>
        <td><%= stock_entry.product.location %></td>
        <td><%= stock_entry.responsible.login %></td>
        <td><%= stock_entry.product.stock_product.display_field %></td>
        <td><%= stock_entry.product.tag %></td>
        <td>
          <%= link_to 'Editar', edit_stock_entry_path(stock_entry), class: "btn btn-sm btn-outline-warning edit-stock-entry" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container pagination justify-content-center" >
  <%= paginate @stock_entries , theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
</div>
