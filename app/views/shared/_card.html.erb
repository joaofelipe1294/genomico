<div class="card col-md-8 offset-md-2 mt-5 p-0">
	<% if locals[:action] == :new %>
  	<div class="card-header bg-info text-white">
  <% else %>
  	<div class="card-header">
	<% end %>
    <h3 class="text-center">
    	<%= locals[:title] %>
	</h3>
  </div>
  <div class="card-body">
		<%= render locals[:form], locals: {action: :new} %>  
  </div>
</div>