<h1>
	Bem vindo
</h1>
<% if flash[:error] %>
	<div class="alert alert-danger" role="alert">
		<%= flash[:error] %>
	</div>
<% end %>

<%= form_tag(home_longin_path, method: :post) do %>
	<div class = 'form-group'>
		<label>Login</label>
		<%= text_field_tag :login, '',{required: true, class: 'form-control'} %>
	</div>
	<div class = 'form-group'>
		<label>Senha</label>
		<%= password_field_tag :password, '',{required: true, class: 'form-control'} %>
	</div>
	<%= submit_tag 'Entrar', {class: 'btn btn-outline-info float-right'} %>
<% end %>
