<%= render 'shared/flash_feedback' %>

<div class="card col-md-6 offset-md-3 p-0 mt-5">
  <div class="card-header bg-dark">
    <h1 class = "text-white text-center">
    	Bem vindo
    </h1>
  </div>
  <div class="card-body">
		<%= form_tag(home_longin_path, method: :post) do %>
			<div class = 'form-group'>
				<label>Login</label>
				<%= text_field_tag :login, '',{required: true, class: 'form-control'} %>
			</div>
			<div class = 'form-group'>
				<label>Senha</label>
				<%= password_field_tag :password, '',{required: true, class: 'form-control'} %>
			</div>
			<%= submit_tag 'Entrar', {class: 'btn btn-outline-info float-right', id: 'btn-login'} %>
		<% end %>
  </div>
</div>
