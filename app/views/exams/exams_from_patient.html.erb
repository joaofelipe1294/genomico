<%= render 'layouts/user_navbar' %>
<div class="col-md-6 offset-md-3 mt-3" style="overflow: auto;">
  <%= form_with(url: exams_from_patient_path(@patient), method: :get) do |form| %>
    <div class="form-group">
      <%= form.label Field.model_name.human %>
      <%= form.select :field_id, content_tag(:option,'Todos',:value=>"0") + options_from_collection_for_select(@fields, "id", "name"), {}, class: 'form-control' %>
    </div>
    <button class="btn btn-outline-info float-right">
      Buscar
    </button>
  <% end %>
</div>

<hr class="mt-3 mb-3">

<h3 class="text-center">
  <%= @patient.name %>
</h3>

<table class="table table-bordered text-center col-md-10 offset-md-1">
  <thead class="bg-dark text-white">
    <th>Exame</th>
    <th>Área</th>
    <th>Data de início</th>
    <th>Status</th>
    <th>Atendimento (Lis)</th>
  </thead>
  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td>
          <%= exam.offered_exam.name %>
        </td>
        <td>
          <%= exam.offered_exam.field.name %>
        </td>
        <td>
          <% unless exam.start_date.nil? %>
            <%= l exam.start_date %>
          <% else %>
            -
          <% end %>
        </td>
        <td>
          <%= show_exam_status exam.status %>
        </td>
        <td>
          <%= link_to exam.attendance.lis_code, workflow_path(exam.attendance, tab: :exams) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
