<%= render "layouts/user_navbar" %>

<%= render "layouts/stock_navbar" %>

<div class="card mt-5 col-6 offset-3 p-0">
  <div class="card-header bg-secondary">
    <h4 class="text-center text-white">
      Nova baixa de estoque
    </h4>
  </div>
  <div class="card-body">
    <%= form_with model: @stock_out, url: create_stock_out_path do |form| %>

      <div class="form-group">
        <%= form.label :product %>
        <%= form.text_field "stock_product_name", value: @stock_out.product.stock_product.name, disabled: true, class: "form-control" %>
        <%= form.text_field :product_id, value: @stock_out.product.id, hidden: true%>
      </div>

      <% if @stock_out.product.has_tag %>
        <div class="form-group">
          <%= form.label "Identificação" %>
          <%= form.text_field "tag", value: @stock_out.product.tag, disabled: true, class: "form-control"%>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :responsible %>
        <%= form.select :responsible_id, options_from_collection_for_select(@users, "id", "name"), {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :date %>
        <%= form.date_field :date, value: Date.current, class: "form-control" %>
      </div>

      <button id="btn-save" class="btn btn-outline-primary float-right">
        Salvar
      </button>

    <% end %>
  </div>
</div>
