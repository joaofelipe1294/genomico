<%= render 'layouts/user_navbar' %>

<div class="mt-3">
  <div class="col-md-5 d-inline-block offset-md-1 border-right">
    <%= form_tag(work_maps_path, {method: :get}) do %>
      <div class="form-group">
        <%= label_tag WorkMap.human_attribute_name :name %>
        <%= text_field_tag :name, '', {class: 'form-control'} %>
      </div>
      <button class="btn btn-outline-info float-right">
        Buscar
      </button>
    <% end %>
  </div>
  <div class="col-md-5 d-inline-block">
    <%= form_tag(work_maps_path, {method: :get}) do %>
      <div class="form-group">
        <%= label_tag 'Data inicial: ' %>
        <%= date_field :date, 'initial', {class: 'form-control date-select mr-3'} %>
        <%= label_tag 'Data final: ', 'Data final: ', {class: 'ml-3'}%>
        <%= date_field :date, 'final', {class: 'form-control date-select'} %>
      </div>
      <button class="btn btn-outline-info float-right">
        Buscar
      </button>

    <% end %>
  </div>

</div>




<table class="table table-bordered text-center mt-5 col-md-10 offset-md-1">
  <thead class="bg-dark text-white">
    <tr>
      <th>
        <h4><%= WorkMap.human_attribute_name :name %></h4>
      <th>
        <h4><%= WorkMap.human_attribute_name :date %></h4>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_maps.each do |work_map| %>
      <tr>
        <td>
          <%= work_map.name %>
        </td>
        <td>
          <%= l work_map.date %>
        </td>
        <td>
          <%= link_to 'Visualizar', work_map_path(work_map), {class: 'btn btn-sm btn-outline-info'} %>
          <%= link_to 'Editar', edit_work_map_path(work_map), {class: 'btn btn-sm btn-outline-warning'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container pagination justify-content-center" >
  <%= paginate @work_maps , theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
</div>