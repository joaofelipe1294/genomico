<%= render 'layouts/admin_navbar' %>

<div class="col-md-12 mb-3">
  <div class="mt-3 col-md-5 mb-3 d-inline-block offset-md-1 border-right">
    <%= form_tag(offered_exams_path, {method: :get}) do %>
      <div class="form-group">
        <label>Buscar exames por área</label>  
        <%= select_tag :field ,options_from_collection_for_select(@fields, 'id', 'name'), {class: 'form-control'} %>
      </div>
      <div>
        <button id = "btn-search-by-field" class="btn btn-outline-info">
          Buscar
        </button>
      </div>
    <% end %>
  </div>

  <div class="mt-3 col-md-5 mb-3 d-inline-block">
    <%= form_tag(offered_exams_path, {method: :get}) do %>
      <div class="form-group">
        <label>Buscar nome</label>  
        <%= text_field_tag :name, '', {class: 'form-control'} %>
      </div>
      <div>
        <button id = "btn-search-by-name" class="btn btn-outline-info">
          Buscar
        </button>
      </div>
    <% end %>
  </div>
</div>

<table class="table text-center">
  <thead class="bg-dark text-white">
    <th>Nome</th>
    <th>Status</th>
    <th>Área</th>
    <th></th>
  </thead>
  <tbody>
    <% @offered_exams.each do |exam| %>
      <tr>
        <td class="name">
          <%= exam.name %>
        </td>
        <td>
          <% if exam.is_active %>
            <span class="text-info">
              Ativo
            </span>
          <% else %>
            <span class="text-danger">
              Inativo
            </span>
          <% end %>
        </td>
        <td>
          <%= exam.field.name %>
        <td>
          <% if exam.is_active %>
            <%= link_to 'Editar', edit_offered_exam_path(exam), {class: 'btn btn-sm btn-outline-warning'} %>
            <%= link_to 'Desabilitar', offered_exam_path(exam), {method: :delete, class: 'btn btn-sm btn-outline-danger', data: {confirm: 'Tem certeza ?'}} %>
          <% else %>
            <%= link_to 'Habilitar', acitvate_offered_exam_path(exam), {method: :post, class: 'btn btn-sm btn-outline-secondary'} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container pagination justify-content-center" >
  <%= paginate @offered_exams , theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
</div>